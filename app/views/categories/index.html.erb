<div class="make-flex">
<h1 class="text-center mt-4">Categories</h1>
<%if logged_in? && current_user.admin?%>
<%= link_to "New", new_category_path, class: "btn btn-outline-success" %>
<%end%>
</div>
<div class="digg_pagination">
<%= will_paginate @category%>
</div>
<div class="container">
      <% @category.each do |category| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-body">
              <h5 class="card-title"><%=link_to category.name, category_path(category), class: "text-success"%></h5>
              <p class="card-text"><%=pluralize(category.articles.count, "article")%></p>
            </div>
            <div class="card-footer text-muted">Created <%=time_ago_in_words(category.created_at)%> ago & Edited <%=time_ago_in_words(category.updated_at)%> ago</div>
          </div>
        </div>
      </div>
      <%end%>
    </div>
</div>